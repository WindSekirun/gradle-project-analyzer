generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id     String @id @default(cuid())
  name   String
  path   String
  origin String

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  ProjectFile ProjectFile[]

  @@index([name, path, origin])
}

model ProjectFile {
  id        String   @id @default(cuid())
  name      String
  path      String
  extension String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  @@index([name, path, projectId])
}
